<div class="ml-4 comp_order_heading heading_font mb-3"><div class="mb-0">{{page_function}}</div></div>

{{#if error}}
<h2 id="error">{{error}}</h2>
{{/if}}

<h4 class="ml-4">Order History:</h4>
{{#if orders.length}}
{{#each orders}}
<div class="incomp_order_box mb-3 ml-4 pl-3">
    <div class="row mb-2">
        <div class="col-4 pr-0 font-weight-bold">Items in order:</div>
    
        <div class="col-8 pl-0">
            <ul>
                {{#each itemsOrdered}}
                    <li>{{itemName}}</li>
                    {{#if customizableComponents.length}}
                    <li>
                        <ul>
                            {{#each customizableComponents}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <form class="col-6" method="POST" id="complete-form-{{_id}}" action="/orders/addFavorite/{{_id}}/{{../userid}}">
            <label id="submit-{{_id}}">
                <input type="submit" value="Add Favorite"/>
            </label>
        </form>
    </div>
</div>
{{/each}}
{{else}}
<h5 class="btm_no_orders">There are currently no incomplete orders!</h5>
{{/if}}

