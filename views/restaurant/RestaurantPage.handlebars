<h1>{{page_function}}</h1>
<a href="/restaurants">Back to Restaurants List</a>
<br>
<a href="/restaurants/{{restaurant._id}}/cart">View my cart</a>
{{#if restaurant.menuItems.length}}
  {{#each restaurant.menuItems}}
{{#if this.isBurger}}
<h3>{{this.itemName}}</h3>
<h4>Price: {{this.price}}</h4>
<form method="POST" id={{this.itemName}}>
  <div class="box">
    <div class="bread_top" id="bread_top_css">
      <div class="seeds1"></div>
      <div class="seeds2"></div>
      <div class="seeds3"></div>
      <div class="seeds4"></div>
      <div class="seeds5"></div>
    </div>
    <div class="lettuce" id="lettuce_css"></div>
    <div class="bacon" id="bacon_css"></div>
    <div class="cheese" id="cheese_css"></div>
    <div class="meat" id="meat_css"></div>
    <div class="bread_bottom" id="bread_bottom_css"></div>
  </div>
  <input type="hidden" name="id" value={{this._id}}>
  <input type="hidden" name="itemName" value={{this.itemName}}>
  <input type="hidden" name="price" value={{this.price}}>
  <label><input onclick="getValue()" type="checkbox" checked="true" name="bread_top" id="bread_top"  > Top Bread</label>
  <label><input onclick="getValue()" type="checkbox" checked="true" name="lettuce" id="lettuce"  > Lettuce</label>
  <label><input onclick="getValue()" type="checkbox" checked="true" name="bacon" id="bacon"  > Bacon</label>
  <label><input onclick="getValue()" type="checkbox" checked="true" name="cheese" id="cheese"  > Cheese</label>
  <label><input onclick="getValue()" type="checkbox" checked="true" name="meat" id="meat"   > Meat</label>
  <label><input onclick="getValue()" type="checkbox" checked="true" name="bread_bottom" id="bread_bottom"> Bottom Bread</label>
  <label><input type="number" name="quantity" step="1" min="1">Quantity</label>
  <button type="submit" id="btn-id">Submit</button>
</form>
 {{else}}
  <h3>{{this.itemName}}</h3>
  <h4>Price: {{this.price}}</h4>
  <form method="POST" id={{this.itemName}}>
    <input type="hidden" name="id" value={{this._id}}>
    <input type="hidden" name="itemName" value={{this.itemName}}>
    <input type="hidden" name="price" value={{this.price}}>
    {{#each this.customizableComponents}}
    <label><input onclick="getValue()" type="checkbox" checked="false" name={{this}} id={{this}}  > {{this}}</label>
    {{/each}}
    <label><input type="number" name="quantity" step="1" min="1">Quantity</label>
    <button type="submit" id="btn-id">Submit</button>
    </form>
  {{/if}}
  {{/each}}
  {{!-- <button class="cart" onclick="getValue_item()">Add to cart</button> --}}
{{else}}
<p>This restaurant hasn't created their menu yet!</p>
{{/if}}
<script
    src="https://code.jquery.com/jquery-3.5.1.js"
    integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>
<script src='/public/js/restaurant_jq.js'></script>